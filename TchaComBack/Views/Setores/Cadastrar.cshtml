
@model SetoresModel
@{
    <title>@ViewData["Title"] </title>
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" defer></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Glide.js/3.6.0/css/glide.core.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Glide.js/3.6.0/css/glide.theme.min.css" />

    <link rel="stylesheet" href="~/css/Setores/cadastrar-setor.css">
</head>
<body>

    <form asp-controller="Setores" asp-action="Cadastrar" method="post" id="formCompleto">
        <div class="modal fade" id="modalCadastrarSetor" aria-hidden="true" aria-labelledby="modalCadastrarSetorLabel" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 id="modalCadastrarSetorLabel">Cadastrar Setor - Etapa 1</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                    </div>
                    <div class="modal-onda-header"></div>
                    <div class="modal-body">
                        <div class="input-group mb-3">
                            <span class="input-group-text"
                                  data-bs-toggle="tooltip"
                                  data-bs-placement="top"
                                  data-bs-custom-class="custom-tooltip"
                                  data-bs-title="Nome do Setor">

                                <i class="bi bi-building-fill"></i>
                            </span>

                            <input asp-for="Nome" maxlength="100" class="form-control" placeholder="Nome do setor" required />
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text"
                                  data-bs-toggle="tooltip"
                                  data-bs-placement="top"
                                  data-bs-custom-class="custom-tooltip"
                                  data-bs-title="Descrição">

                                <i class="fas fa-comment"></i>
                            </span>
                            <input asp-for="Descricao" maxlength="150" class="form-control" placeholder="Descrição" required />
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text"
                                  data-bs-toggle="tooltip"
                                  data-bs-placement="top"
                                  data-bs-custom-class="custom-tooltip"
                                  data-bs-title="Responsável">
                                <i class="fas fa-user-tie"></i>
                            </span>
                            <input asp-for="ResponsavelSetor" maxlength="100" class="form-control" placeholder="Responsável" required />
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text"
                                  data-bs-toggle="tooltip"
                                  data-bs-placement="top"
                                  data-bs-custom-class="custom-tooltip"
                                  data-bs-title="E-mail Responsável">
                                <i class="fas fa-envelope"></i>
                             </span>
                            <input asp-for="EmailResponsavelSetor" maxlength="100" class="form-control" placeholder="E-mail Responsável" required />
                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="SexoResponsavel">Sexo do Responsável:</label>
                            <select asp-for="SexoResponsavel" class="form-select">
                                <option value="F">Feminino</option>
                                <option value="M">Masculino</option>
                            </select>
                        </div>

                    </div>
                    <div class="modal-onda-footer"></div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-step-primary"
                                data-bs-toggle="modal"
                                data-bs-target="#modalCadastrarSetorConfirmar"
                                onclick="document.getElementById('modalCadastrarSetor').querySelector('[data-bs-dismiss]').click();">
                            Próxima Etapa
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="modalCadastrarSetorConfirmar" aria-hidden="true" aria-labelledby="modalCadastrarSetorConfirmarLabel" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1  id="modalCadastrarSetorConfirmarLabel">Cadastrar Setor - Etapa 2</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                    </div>
                    <div class="modal-onda-header"></div>
                    <div class="modal-body">
                        <div class="input-group mb-3">
                            <span class="input-group-text"
                                  data-bs-toggle="tooltip"
                                  data-bs-placement="top"
                                  data-bs-custom-class="custom-tooltip"
                                  data-bs-title="Localização">
                                <i class="fas fa-map-marker-alt"></i>
                            </span>
                            <input asp-for="Localizacao" class="form-control" placeholder="Localização" required />
                        </div>
                        <div class="input-group mb-3">
                            <button class="btn btn-secondary" type="button"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalCriarCategoriaForm">
                                Cadastrar Categoria
                            </button>
                            <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.Categorias">
                                <option value="">Selecione</option>
                            </select>
                            <span asp-validation-for="CategoriaId" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text"
                                  data-bs-toggle="tooltip"
                                  data-bs-placement="top"
                                  data-bs-custom-class="custom-tooltip"
                                  data-bs-title="Imagem do Setor">
                                <i class="fas fa-image"></i>
                             </span>
                            <input asp-for="ImagemSetor" type="url" class="form-control" placeholder="https://exemplo.com/imagem.jpg" />
                        </div> 
                    </div>
                    <div class="modal-onda-footer"></div>
                    <div class="modal-footer">
                        <div class="form-example">
                            <label for="Confirmacao">Confirmação:</label>
                            <p>Revise as informações inseridas nas etapas anteriores.</p>
                        </div>

                        <button type="button" class="btn btn-step-secundario"
                                data-bs-toggle="modal"
                                data-bs-target="#modalCadastrarSetor"
                                onclick="document.getElementById('modalCadastrarSetorConfirmar').querySelector('[data-bs-dismiss]').click();">
                            Retornar  Etapa
                        </button>
                        <button type="submit" class="btn btn-success">Finalizar Cadastro</button>
                    </div>
                </div>
            </div>
        </div>
    </form>


    <form asp-controller="Categorias" asp-action="Cadastrar" method="post" id="formCategorias">
        <div class="modal fade" id="modalCriarCategoriaForm" aria-hidden="true" aria-labelledby="modalCriarCategoriaLabel" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 id="modalCriarCategoriaLabel">Criar Categoria</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                    </div>
                    <div class="modal-body">
                        <div class="input-group mb-3">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <input asp-for="Nome" maxlength="100" class="form-control" placeholder="Nome" required />
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text"><i class="fas fa-comment"></i></span>
                            <input asp-for="Descricao" maxlength="150" class="form-control" placeholder="Descrição" required />
                        </div>
                        <div class="form-example">
                            <label for="Confirmacao">Confirmação:</label>
                            <p>Revise as informações inseridas nas etapas anteriores.</p>
                        </div>
                        <button class="btn btn-step-secundario" type="button"
                                data-bs-toggle="modal"
                                data-bs-target="#modalCadastrarSetorConfirmar">
                            Cancelar
                        </button>
                        <button type="submit" class="btn btn-success">Finalizar Cadastro</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            tooltipTriggerList.forEach(function (tooltipTriggerEl) {
                new bootstrap.Tooltip(tooltipTriggerEl)
            })
        });
    </script>

</body>
</html>
