@model UsuariosModel
@{
    Layout = null;
    <title>@ViewData["Title"]Login</title>
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Usuarios/login.css">
    <title>Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="~/js/Usuarios/login.js" defer></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="flex h-screen">

    @if (TempData["MensagemSucesso"] != null)
    {
        <div id="successAlert" class="custom-alert success">
            <span><strong>Sucesso!</strong> @TempData["MensagemSucesso"]</span>
            <span class="closebtn" onclick="closeAlert('successAlert')">&times;</span>
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div id="errorAlert" class="custom-alert error">
            <span><strong>Atenção!</strong> @TempData["MensagemErro"]</span>
            <span class="closebtn" onclick="closeAlert('errorAlert')">&times;</span>
        </div>
    }

    <section class="login">
        <div class="box-one-login"></div>
        <div class="box-two-login">
            <div class="flex-bem-vindo">
                <h3>Seja bem-vindo(a)</h3>
                <p class="text-gray-500">TCB Sistema de Controle de Funcionários</p>
            </div>
            <div class="bg-white" id="divForm">
                <div class="w-96 flex-form">
                    @Html.AntiForgeryToken()
                    <form asp-controller="Login" asp-action="Login" method="post" id="loginForm">
                        <div class="input-group">
                            <input type="email" asp-for="Email" class="w-full border rounded-lg p-3 outline-none focus:ring-2 focus:ring-brown-400" placeholder=" " required>
                            <label for="email">E-mail</label>
                        </div>
                        <div class="input-group relative">
                            <input type="password" asp-for="Senha" id="password" class="w-full border rounded-lg p-3 pr-10 outline-none focus:ring-2 focus:ring-brown-400" placeholder=" " required>
                            <label for="password">Senha</label>
                            <span class="absolute right-3 top-1/2 transform -translate-y-1/2 cursor-pointer" onclick="togglePassword()">
                                <svg id="eye-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                                    <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0" />
                                    <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7" />
                                </svg>
                            </span>
                        </div>
                        <partial name="~/Views/Componentes/Botao-Primario/BotaoPrimario.cshtml" view-data=@(new ViewDataDictionary(ViewData){
                                 { "Texto", "Entrar" },
                                 { "Url", "/Login" },
                                 { "ClasseExtra", "w-full text-white font-bold py-3 rounded-lg transition-all botao-entrar" },
                                 { "Id", "loginButton" },
                                 { "Type", "submit" },
                                 { "elemento", "Button"}
                                 }) />
                    </form>
                    <div class="flex-redirecionar">
                        <p class="text-center text-gray-500 text-sm mt-4">Novo aqui? <a class="hover:underline linkRecuperarSenha" asp-controller="Usuarios" asp-action="Cadastrar">Cadastrar aqui</a></p>
                        <p class="text-center text-gray-500 text-sm mt-4">Esqueceu sua senha? <a class="hover:underline linkRecuperarSenha" asp-controller="Usuarios" asp-action="EsqueceuSenha">Recupere aqui</a></p>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>