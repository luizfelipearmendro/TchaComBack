@model ExtratoPontoModel
@{
    ViewData["Title"] = "Registrar Ponto";
}
<link rel="stylesheet" href="~/css/Shared/site.css">

<h2>Registrar Ponto</h2>

<form asp-controller="ExtratosPonto" asp-action="RegistrarPonto" method="post">
    <button type="submit" class="btn btn-primary">Registrar Agora</button>
</form>

@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success">@TempData["Mensagem"]</div>
}