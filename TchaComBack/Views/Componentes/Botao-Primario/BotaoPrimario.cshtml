@using Microsoft.AspNetCore.Html

@{
    var texto = ViewData["Texto"]?.ToString();
    var url = ViewData["Url"]?.ToString();
    var classeExtra = ViewData["ClasseExtra"]?.ToString();
    var id = ViewData["Id"]?.ToString();
    var type = ViewData["Type"]?.ToString();
    var elemento = ViewData["elemento"]?.ToString()?.ToLower();
    var aspAction = ViewData["AspAction"]?.ToString();
    var aspController = ViewData["AspController"]?.ToString();
    var aspRouteId = ViewData["AspRouteId"]?.ToString();
    var target = ViewData["Target"]?.ToString();
       var conteudoHtml = ViewData["ConteudoHtml"] as HtmlString;

}

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" />

    <link rel="stylesheet" href="~/css/Componentes/Botao-Primario/BotaoPrimario.css" />


    @if( elemento == "a")
    {
        <a href="@url" class="botao-primario @classeExtra" id="@id" type="@type" target="@target">
            @conteudoHtml
            @texto
        </a>
    }
    else if(elemento == "button")
    {
        <button type="@type" class="botao-primario @classeExtra" id="@id">
            @conteudoHtml
            @texto
        </button>
    }
    else
    {
        <form asp-action="@aspAction" asp-controller="@aspController" asp-route-id="@aspRouteId">
            <button class="botao-primario @classeExtra " type="@(string.IsNullOrEmpty(type) ? "submit" : type)"
                    class="@classeExtra"
                    id="@id">
                @conteudoHtml
                @texto
            </button>
        </form>
    }

