<script src="https://cdn.tailwindcss.com" ></script>
<script>

        document.addEventListener("DOMContentLoaded", function () {
        const toggleBtn = document.getElementById("toggle-btn");
        const menuLeft = document.getElementById("sidebar-multi-level-sidebar");
        const layout = document.querySelector(".layout");
        const accordionButtons = document.querySelectorAll('.accordion-botao');


        toggleBtn.addEventListener("click", function () {
            menuLeft.classList.toggle("collapsed");
            layout.classList.toggle('expanded');

            if (menuLeft.classList.contains("collapsed")) {
                menuLeft.style.width = "0";
                layout.style.marginLeft = "0";
            } else {

                menuLeft.style.width = "16rem";
                layout.style.marginLeft = "16rem";
            }
        });
            accordionButtons.forEach(button => {
                button.addEventListener('click', function () {
                    const content = this.nextElementSibling;
                    const arrow = this.querySelector('.accordion-arrow');


                    accordionButtons.forEach(btn => {
                        const otherContent = btn.nextElementSibling;
                        const otherArrow = btn.querySelector('.accordion-arrow');
                        if (otherContent !== content && otherContent.style.maxHeight) {
                            otherContent.style.maxHeight = null;
                            otherArrow.style.transform = "rotate(0deg)";
                        }
                    });


                    if (content.style.maxHeight) {
                        content.style.maxHeight = null;
                        arrow.style.transform = "rotate(0deg)";
                    } else {
                        content.style.maxHeight = content.scrollHeight + "px";
                        arrow.style.transform = "rotate(180deg)";
                        arrow.style.transition = ".2s ease";
                    }
                });
            });

    });

</script>