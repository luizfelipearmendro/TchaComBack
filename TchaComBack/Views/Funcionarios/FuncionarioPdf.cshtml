@model FuncionariosModel


<html>
<head>
    <meta charset="utf-8" />
    <title>Ficha Cadastral - @Model.Nome</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 30px;
        }

        h1 {
            text-align: center;
            color: #444;
        }

        .categoria {
            margin-bottom: 20px;
        }

            .categoria h5 {
                background-color: #eee;
                padding: 10px;
                border-left: 5px solid #8A2BE2;
            }

        p {
            margin: 5px 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
        }

        footer {
            margin-top: 50px;
            text-align: center;
            font-size: 0.9em;
            color: #777;
        }
    </style>
</head>
<body>

    <h1>Ficha Cadastral do Funcionário</h1>

    <div class="categoria">
        <h5>Informações Pessoais</h5>
        <p><strong>Nome:</strong> @Model.Nome</p>
        <p><strong>Data de Nascimento:</strong> @Model.DataNascimento.ToString("dd/MM/yyyy")</p>
        <p><strong>Sexo:</strong> @Model.Sexo</p>
        <p><strong>Raça:</strong> @Model.RacaNav?.Raca</p>
        <p><strong>Estado Civil:</strong> @Model.EstadoCivilNav?.EstadoCivil</p>
        <p><strong>Nome da Mãe:</strong> @Model.NomeMae</p>
        <p><strong>Naturalidade:</strong> @Model.Naturalidade</p>
    </div>

    <div class="categoria">
        <h5>Endereço</h5>
        <p><strong>Endereço:</strong> @Model.Endereco</p>
        <p><strong>Cidade:</strong> @Model.CidadeResidencia</p>
    </div>

    <div class="categoria">
        <h5>Contato</h5>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Telefone:</strong> @Model.Celular</p>
    </div>

    <div class="categoria">
        <h5>Detalhes Profissionais</h5>
        <p><strong>Cargo:</strong> @Model.Cargo</p>
        <p><strong>Salário:</strong> R$ @Model.Salario.ToString("N2")</p>
        <p><strong>Data de Ingresso:</strong> @Model.DataIngresso.ToString("dd/MM/yyyy")</p>
    </div>

    <footer>
        Documento gerado automaticamente pelo sistema em @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
    </footer>


</body>
</html>